@model TG.Model.Models.User

@{
    ViewBag.Title = "Create";
}

<!-- Build page from here: -->
<div class="row-fluid">

    <div class="span12">

        <div class="page-header">
            <h4>User profile</h4>
        </div>

        @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @Class="form-horizontal", @Id="form-validate"}))
        {
            @Html.ValidationSummary(true)
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <label class="form-label span3" for="username">Username:</label>
                        @Html.TextBoxFor(model => model.UserName, new { @Class = "span4 required" })
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <label class="form-label span3" for="name">First Name:</label>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "span4 required" })
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <label class="form-label span3" for="name">Last Name:</label>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "span4 required" })
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <label class="form-label span3" for="email">Email:</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "span4 required" })
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <label class="form-label span3" for="normal">Password fields</label>
                        <div class="span9 controls">
                            @Html.PasswordFor(model => model.Password, new { @Class = "span4", @Name = "password"})                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">        
                <div class="span12">
                    <div class="row-fluid">
                        <div class="form-actions">
                        <div class="span3"></div>
                        <div class="span4 controls">
                            <button type="submit" class="btn btn-info marginR10">Save changes</button>
                            <button type="reset" id="calcel" class="btn btn-danger">Cancel</button>
                        </div>
                        </div>
                    </div>
                </div>   
            </div>
        }             
    </div><!-- End .span12 -->
    
</div><!-- End .row-fluid -->
<script type="text/javascript">
    $(function () {
        $("#cancel").click(function () { 
            window.location = '@Url.Action("Login", "Autentication")';
        });
    });
</script>